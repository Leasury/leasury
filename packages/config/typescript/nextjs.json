{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "noEmit": true,
        "module": "ESNext",
        "jsx": "react-jsx",
        "incremental": true,
        "resolveJsonModule": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    }
}
